<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 되돌아가기 버튼과 "도전과제 설정" 텍스트 -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="도전과제 설정"
            android:textAppearance="?attr/textAppearanceHeadline6" />
    </LinearLayout>

    <!-- 도전과제 입력 칸 -->
    <LinearLayout
        android:id="@+id/layoutChallenges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutHeader"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etChallenge1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="도전과제 1" />

        <EditText
            android:id="@+id/etChallenge2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="도전과제 2" />

        <EditText
            android:id="@+id/etChallenge3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="도전과제 3" />
    </LinearLayout>

    <!-- "열심히 채워볼까요?" 텍스트와 빈 도장판 -->
    <TextView
        android:id="@+id/tvStampMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutChallenges"
        android:text="열심히 채워볼까요?"
        android:layout_marginTop="16dp" />

    <!-- 임시 도장판 표시 -->
    <GridLayout
        android:id="@+id/gridLayoutStamps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvStampMessage"
        android:columnCount="6"
        android:rowCount="5"
        android:layout_marginTop="8dp">

    <!-- 도장 아이템 추가 (프로그래밍적으로 추가될 예정) -->

</GridLayout>

    <!-- "챌린지 참여하기" 버튼 -->
    <Button
        android:id="@+id/btnJoinChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/gridLayoutStamps"
        android:text="챌린지 참여하기"
        android:layout_marginTop="16dp" />
</RelativeLayout>
